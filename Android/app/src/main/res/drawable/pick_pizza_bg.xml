<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="@android:dimen/app_icon_size"
            android:shape="rectangle">
            <corners android:radius="4dip"></corners>
            <solid android:color="@color/accent" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:left="8dp"
        android:right="8dp">
        <shape
            android:id="@+id/pizza_selection_line"
            android:shape="line">

            <stroke
                android:color="@color/darkText"
                android:dashWidth="6dp"
                android:dashGap="6dp"
                android:width="2dp" />

        </shape>
    </item>
</layer-list>