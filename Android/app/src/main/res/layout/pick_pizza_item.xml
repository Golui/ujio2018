<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <View
        android:id="@+id/pick_pizza_item_wrapper"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/pick_pizza_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pick_pizza_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/spoon_and_fork"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/pick_pizza_item_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/pick_pizza_item_wrapper" />

    <TextView
        android:id="@+id/pick_pizza_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="DUMMY PIZZA"
        android:textColor="@color/darkText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pick_pizza_price"
        app:layout_constraintStart_toStartOf="@+id/pick_pizza_item_wrapper"
        app:layout_constraintTop_toTopOf="@+id/pick_pizza_item_wrapper" />

    <TextView
        android:id="@+id/pick_pizza_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="DUMMY INGREDIENTS"
        android:textColor="@color/darkText"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/pick_pizza_item_wrapper"
        app:layout_constraintEnd_toStartOf="@+id/pick_pizza_button"
        app:layout_constraintStart_toStartOf="@+id/pick_pizza_item_wrapper" />

    <TextView
        android:id="@+id/pick_pizza_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="4.20 zÅ‚"
        android:textColor="@color/darkText"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/pick_pizza_name"
        app:layout_constraintEnd_toEndOf="@+id/pick_pizza_item_wrapper" />

</android.support.constraint.ConstraintLayout>