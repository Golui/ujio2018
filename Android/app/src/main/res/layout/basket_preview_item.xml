<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent">

    <View
        android:id="@+id/preview_basket_item_wrapper"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preview_basket_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/dummy_descr"
        android:textColor="@color/darkText"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/preview_basket_item_wrapper"
        app:layout_constraintStart_toStartOf="@+id/preview_basket_item_wrapper"
        app:layout_constraintTop_toTopOf="@+id/preview_basket_item_wrapper"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/preview_basket_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/dummy_descr"
        android:textColor="@color/darkText"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/preview_basket_item_name"
        app:layout_constraintEnd_toEndOf="@+id/preview_basket_item_wrapper" />

</android.support.constraint.ConstraintLayout>